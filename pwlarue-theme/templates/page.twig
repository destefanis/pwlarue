{% extends "base.twig" %}

{% block content %}
	<div class="content-wrapper">
		<div class="post-type-{{ post.post_type }} post-{{ post.post_name }}" id="post-{{ post.ID }}">
			<div class="article-content">
				<h1 class="article-title">
					{{ post.title }}
				</h1>
				<div class="article-body">
					{{ post.content }}
				</div>
			</div>
		</div>
	</div><!-- /content-wrapper -->
{% endblock %}
